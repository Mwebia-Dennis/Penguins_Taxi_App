<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/uber"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:id="@+id/imageview1"
        />

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:id="@+id/rideLinear"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/imageview1"
        android:background="@drawable/linear_layout"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ride"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ride_with_us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D0E0F"
            android:paddingBottom="10dp"
            android:gravity="center"/>
        <Button
            android:onClick="getStartedRider"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/driveLinear"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview1"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/rideLinear"
        android:background="@drawable/linear_layout"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/drive"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/work_for_us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D0E0F"
            android:paddingBottom="10dp"
            android:gravity="center"/>
        <Button
            android:onClick="getStartedDriver"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:drawableStart="@drawable/ic_arrow_forward_black_24dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout"
            />


    </LinearLayout>



</RelativeLayout>